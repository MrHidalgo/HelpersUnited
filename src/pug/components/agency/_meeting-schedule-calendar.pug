.m-schedule__calendar
  .m-schedule__calendar-row.m-schedule__calendar-row--days
    -
      var calDays = [
      'Monday',
      'Tuesday',
      'Wednesday',
      'Thursday',
      'Friday',
      'Saturday',
      'Sunday',
      ];
    each val, idx in [26,27,28,29,30,1,2]
      .m-schedule__calendar-col
        p!= calDays[idx]
        if(idx === 0 || idx === 1 || idx === 2 || idx === 3 || idx === 4)
          i!= val
        else
          span!= val

